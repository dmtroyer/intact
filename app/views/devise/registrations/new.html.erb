<div class="sign-up-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :username, 'Username:', class: 'col-sm-5 control-label' %>
    <div class="col-sm-7">
      <%= f.text_field :username, autofocus: true, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Password:', class: 'col-sm-5 control-label' %>
    <div class="col-sm-7">
      <%= f.password_field :password, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Password Confirmation:', class: 'col-sm-5 control-label' %>
    <div class="col-sm-7">
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2">
      <div class="col-sm-5 pull-right">
        <%= f.submit 'Sign Up', class: 'btn btn-primary pull-right' %>
      </div>
    </div>
  </div>
<% end %>
</div>
